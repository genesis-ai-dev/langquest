{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "alwaysAllow": ["resolve-library-id", "get-library-docs"]
    },
    "shadcn": {
      "command": "npx",
      "args": ["shadcn@latest", "mcp"]
    },
    "lucide-icons": {
      "command": "npx",
      "args": ["lucide-icons-mcp", "--stdio"],
      "alwaysAllow": [
        "search_icons",
        "search_categories",
        "fuzzy_search_icons",
        "fuzzy_search_categories",
        "get_icon_usage_examples",
        "list_all_icons_by_category",
        "list_all_categories"
      ]
    },
    "coolors": {
      "command": "npx",
      "args": ["-y", "@trishchuk/coolors-mcp"],
      "description": "When converting from HSL make sure to round the values to the nearest percentage."
    },
    "supabase": {
      "url": "https://mcp.supabase.com/mcp?read_only=true"
    },
    "maestro": {
      "command": "maestro",
      "args": ["mcp"]
    }
  }
}
