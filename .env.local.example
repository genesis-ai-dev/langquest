# LangQuest Local Development Environment Variables
# This file is used as a template to generate .env.local
# LOCAL_IP will be automatically replaced with your machine's local IP address

# Supabase Configuration
# Get these values after running: npx supabase status
# Or check: http://localhost:54323 (Supabase Studio) -> Settings -> API
EXPO_PUBLIC_SUPABASE_URL=http://LOCAL_IP:54321
EXPO_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZS1kZW1vIiwicm9sZSI6ImFub24iLCJleHAiOjE5ODM4MTI5OTZ9.CRXP1A7WOeoJeXxjNni43kdQwgnWNReilDMblYTn_I0
EXPO_PUBLIC_SUPABASE_BUCKET=local
EXPO_PUBLIC_APP_VARIANT=development

# PowerSync Configuration
EXPO_PUBLIC_POWERSYNC_URL=http://LOCAL_IP:8000
PS_PORT=8000
# PostgreSQL connection string for PowerSync (uses Docker network 'db' hostname)
PS_DATA_SOURCE_URI=postgresql://postgres:postgres@db:5432/postgres
# JWT secret from Supabase (get from: npx supabase status | grep JWT_SECRET)
# Or from Supabase Studio: http://localhost:54323 -> Settings -> API -> JWT Secret
PS_SUPABASE_JWT_SECRET=super-secret-jwt-token-with-at-least-32-characters-long

# Site URL for auth redirects (Expo dev server default)
EXPO_PUBLIC_SITE_URL=http://LOCAL_IP:8081

# Optional: PostHog Analytics (leave empty for local dev)
# EXPO_PUBLIC_POSTHOG_KEY=
# EXPO_PUBLIC_POSTHOG_HOST=
