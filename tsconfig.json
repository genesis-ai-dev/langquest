{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "expo-file-system/next": ["node_modules/expo-file-system/build/next"]
    },
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "Bundler"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": ["llm_supp_files", "node_modules", "supabase/functions/**/*"]
}
